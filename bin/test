#!/usr/bin/env bash
set -euo pipefail

cd "$(cd "$(dirname "$0")"; pwd -P)"/..
lein cljsbuild once

echo "build completed successfully"

elide_timestamps() {
  sed -E 's/\[ *[0-9]+\.[0-9]+s\]/[...]/' "$@"
}

echo "comparing expected with actual"

diff --side-by-side \
  <(elide_timestamps test/expected.log) \
  <(node target/test/tests.js 2>&1 | elide_timestamps)
  
echo 'ok'
